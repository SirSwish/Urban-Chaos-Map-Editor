<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <RootNamespace>UrbanChaosMapEditor</RootNamespace>
    <AssemblyName>UrbanChaosMapEditor</AssemblyName>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Assets\Icons\app.ico</ApplicationIcon>
  </PropertyGroup>

  <!-- 1) Remove any accidental None/Content items under Assets -->
  <ItemGroup>
    <None Remove="Assets\**\*.*" />
    <Content Remove="Assets\**\*.*" />
  </ItemGroup>

  <!-- 2) Pack EVERYTHING under Assets as WPF Resource (pack://application:,,,/Assets/...) -->
  <ItemGroup>
    <Resource Include="Assets\**\*.*" />
  </ItemGroup>

  <!-- (Optional) Keep these folders visible in Solution Explorer -->
  <ItemGroup>
    <Folder Include="Assets\Images\" />
    <Folder Include="Themes\" />
  </ItemGroup>

</Project>
