<Application x:Class="UrbanChaosMapEditor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:UrbanChaosMapEditor.Converters"
             xmlns:models="clr-namespace:UrbanChaosMapEditor.Models">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Global converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <conv:CountToBoolConverter x:Key="CountToBool"/>
            <conv:InvertBoolToVisibilityConverter x:Key="InvertBoolToVis"/>
            <conv:PathToFileNameConverter x:Key="PathToFileName"/>
            <conv:NullToBoolConverter x:Key="NullToBool"/>

            <!-- Merge theme(s) -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Dark.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
