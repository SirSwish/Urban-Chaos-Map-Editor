<UserControl x:Class="UrbanChaosMapEditor.Views.EditorTabs.BuildingsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:UrbanChaosMapEditor.ViewModels"
             xmlns:conv="clr-namespace:UrbanChaosMapEditor.Converters"
             xmlns:m="clr-namespace:UrbanChaosMapEditor.Models"
             Foreground="White">

    <!-- Remove this if the parent sets DataContext -->
    <UserControl.DataContext>
        <vm:BuildingsTabViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <!-- Fluorescent overlay colours -->
        <SolidColorBrush x:Key="FacetWallBrush"   Color="#00FF00"/>
        <SolidColorBrush x:Key="FacetFenceBrush"  Color="#FFFF00"/>
        <SolidColorBrush x:Key="FacetCableBrush"  Color="#FF0000"/>
        <SolidColorBrush x:Key="FacetDoorBrush"   Color="#A020F0"/>
        <SolidColorBrush x:Key="FacetLadderBrush" Color="#FFA500"/>
        <SolidColorBrush x:Key="FacetOtherBrush"  Color="#7FD4FF"/>

        <!-- Global text colour for this tab -->
        <SolidColorBrush x:Key="TreeViewForegroundBrush" Color="White"/>

        <!-- Make ALL TextBlocks white by default -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TreeViewForegroundBrush}"/>
        </Style>

        <!-- Ensure TreeView items keep white text even when selected/disabled -->
        <Style TargetType="TreeViewItem">
            <Setter Property="Foreground" Value="{StaticResource TreeViewForegroundBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource TreeViewForegroundBrush}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="#88FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LegendPill" TargetType="Border">
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="2,0"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <!-- Facet color converter -->
        <conv:FacetTypeToBrushConverter x:Key="FacetTypeToBrush"/>
    </UserControl.Resources>

    <DockPanel>
        <!-- Toolbar -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="8,6" VerticalAlignment="Center">
            <!-- Watermarked search box -->
            <Grid Width="180" Margin="0,0,8,0" ToolTip="Search (building id, storey id, facet id, type)">
                <TextBox x:Name="SearchBox"
                         Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock IsHitTestVisible="False" Margin="6,2,0,0" Foreground="#66FFFFFF" Text="Search">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <ComboBox Width="160" Margin="0,0,8,0"
                      ItemsSource="{Binding FacetTypeOptions}"
                      SelectedItem="{Binding SelectedFacetType}"
                      ToolTip="Filter by facet type"/>

            <Button Content="Refresh" Command="{Binding RefreshCommand}" />

            <!-- Legend -->
            <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                <Border Style="{StaticResource LegendPill}" Background="{StaticResource FacetWallBrush}">
                    <TextBlock Text="Walls" Margin="6,0" FontWeight="SemiBold"/>
                </Border>
                <Border Style="{StaticResource LegendPill}" Background="{StaticResource FacetFenceBrush}">
                    <TextBlock Text="Fences" Margin="6,0" FontWeight="SemiBold"/>
                </Border>
                <Border Style="{StaticResource LegendPill}" Background="{StaticResource FacetCableBrush}">
                    <TextBlock Text="Cables" Margin="6,0" FontWeight="SemiBold"/>
                </Border>
                <Border Style="{StaticResource LegendPill}" Background="{StaticResource FacetDoorBrush}">
                    <TextBlock Text="Doors" Margin="6,0" FontWeight="SemiBold"/>
                </Border>
                <Border Style="{StaticResource LegendPill}" Background="{StaticResource FacetLadderBrush}">
                    <TextBlock Text="Ladders" Margin="6,0" FontWeight="SemiBold"/>
                </Border>
            </StackPanel>
        </StackPanel>

        <!-- Columnar stack: Tree (top) | Splitter | Details (bottom) -->
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="6" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- TreeView (scrollable) -->
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                <TreeView ItemsSource="{Binding Buildings}"
                          SelectedItemChanged="TreeView_OnSelectedItemChanged"
                          MouseDoubleClick="TreeView_OnMouseDoubleClick"
                          Foreground="{StaticResource TreeViewForegroundBrush}"
                          TextElement.Foreground="{StaticResource TreeViewForegroundBrush}">
                    <TreeView.ItemTemplate>
                        <!-- Building -->
                        <HierarchicalDataTemplate DataType="{x:Type vm:BuildingVM}" ItemsSource="{Binding Storeys}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" Margin="2,0"/>
                                <TextBlock Text="  ("/>
                                <TextBlock Text="{Binding FacetCount}" />
                                <TextBlock Text=" facets)"/>
                            </StackPanel>

                            <!-- Storeys -->
                            <HierarchicalDataTemplate.ItemTemplate>
                                <HierarchicalDataTemplate DataType="{x:Type vm:StoreyVM}" ItemsSource="{Binding Groups}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Storey "/>
                                        <TextBlock Text="{Binding StoreyId}" FontWeight="Bold" Margin="2,0"/>
                                        <TextBlock Text="  ("/>
                                        <TextBlock Text="{Binding UsageCount}"/>
                                        <TextBlock Text=" facets)"/>
                                    </StackPanel>

                                    <!-- Type groups -->
                                    <HierarchicalDataTemplate.ItemTemplate>
                                        <HierarchicalDataTemplate DataType="{x:Type vm:FacetTypeGroupVM}" ItemsSource="{Binding Facets}">
                                            <StackPanel Orientation="Horizontal">
                                                <Ellipse Width="9" Height="9" Margin="0,0,6,0">
                                                    <Ellipse.Fill>
                                                        <MultiBinding Converter="{StaticResource FacetTypeToBrush}">
                                                            <Binding Path="Type"/>
                                                            <Binding Source="{StaticResource FacetWallBrush}"/>
                                                            <Binding Source="{StaticResource FacetFenceBrush}"/>
                                                            <Binding Source="{StaticResource FacetCableBrush}"/>
                                                            <Binding Source="{StaticResource FacetDoorBrush}"/>
                                                            <Binding Source="{StaticResource FacetLadderBrush}"/>
                                                            <Binding Source="{StaticResource FacetOtherBrush}"/>
                                                        </MultiBinding>
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                                <TextBlock Text="{Binding TypeName}" FontWeight="SemiBold"/>
                                                <TextBlock Text="  ("/>
                                                <TextBlock Text="{Binding Count}"/>
                                                <TextBlock Text=")"/>
                                            </StackPanel>

                                            <!-- Facets -->
                                            <HierarchicalDataTemplate.ItemTemplate>
                                                <DataTemplate DataType="{x:Type vm:FacetVM}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="#"/>
                                                        <TextBlock Text="{Binding FacetId1}" FontWeight="Bold" Margin="2,0"/>
                                                        <TextBlock Text="  " />
                                                        <TextBlock Text="{Binding Coords}"/>
                                                        <TextBlock Text="  type="/>
                                                        <TextBlock Text="{Binding Type}"/>

                                                        <!-- Non-cable style -->
                                                        <StackPanel Orientation="Horizontal">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Type}" Value="{x:Static m:FacetType.Cable}">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>
                                                            <TextBlock Text="  style="/>
                                                            <TextBlock Text="{Binding StyleDisplay}"/>
                                                        </StackPanel>

                                                        <!-- Cable-specific display (uses StyleDisplay already formatted) -->
                                                        <StackPanel Orientation="Horizontal">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Type}" Value="{x:Static m:FacetType.Cable}">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>
                                                            <TextBlock Text="  " />
                                                            <TextBlock Text="{Binding StyleDisplay}"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </HierarchicalDataTemplate.ItemTemplate>
                                        </HierarchicalDataTemplate>
                                    </HierarchicalDataTemplate.ItemTemplate>
                                </HierarchicalDataTemplate>
                            </HierarchicalDataTemplate.ItemTemplate>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </ScrollViewer>

            <!-- Splitter -->
            <GridSplitter Grid.Row="1"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Center"
                          Height="6"
                          Background="#22000000"
                          ShowsPreview="True"/>

            <!-- Details panel (scrollable) -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,6,0,0">
                    <!-- Selection card -->
                    <Border Padding="10" BorderBrush="#333" BorderThickness="1" CornerRadius="6">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Selection" FontWeight="Bold" FontSize="13"/>
                            <StackPanel Grid.Row="2" Orientation="Horizontal">
                                <TextBlock Text="Facet ID: " FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding SelectedFacet.FacetId1}"/>
                                <TextBlock Text="   Type: " FontWeight="SemiBold" Margin="10,0,0,0"/>
                                <TextBlock Text="{Binding SelectedFacet.Type}"/>

                                <!-- Non-cable: show StyleIndex -->
                                <TextBlock Text="   Style: " FontWeight="SemiBold" Margin="10,0,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedFacet.Type}" Value="{x:Static m:FacetType.Cable}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text="{Binding SelectedFacet.StyleIndex}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedFacet.Type}" Value="{x:Static m:FacetType.Cable}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- Cable-only summary -->
                                <StackPanel Orientation="Horizontal">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedFacet.Type}" Value="{x:Static m:FacetType.Cable}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <TextBlock Text="   Cable: " FontWeight="SemiBold" Margin="10,0,0,0"/>
                                    <TextBlock>
                                        <Run Text="step1="/><Run Text="{Binding SelectedFacet.CableStep1}"/>
                                        <Run Text=", step2="/><Run Text="{Binding SelectedFacet.CableStep2}"/>
                                        <Run Text=", mode="/><Run Text="{Binding SelectedFacet.FHeight}"/>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,6,0,0">
                                <TextBlock Text="Coords: " FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding SelectedFacet.Coords}"/>
                                <TextBlock Text="   Height: " FontWeight="SemiBold" Margin="10,0,0,0"/>
                                <TextBlock>
                                    <Run Text="{Binding SelectedFacet.Height}"/><Run Text="/"/><Run Text="{Binding SelectedFacet.FHeight}"/>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,6,0,0">
                                <TextBlock Text="Flags: " FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding SelectedFacet.Flags}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,6,0,0">
                                <TextBlock Text="Storey: " FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding SelectedStoreyId}"/>
                                <TextBlock Text="   Building: " FontWeight="SemiBold" Margin="10,0,0,0"/>
                                <TextBlock Text="{Binding SelectedBuildingId}"/>
                            </StackPanel>

                            <TextBlock Grid.Row="6" Opacity="0.6"
                                       Text="(Display-only preview. Editing to come.)"
                                       VerticalAlignment="Bottom"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</UserControl>
