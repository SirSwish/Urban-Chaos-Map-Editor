<UserControl x:Class="UrbanChaosMapEditor.Views.EditorTabs.BuildingsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:UrbanChaosMapEditor.ViewModels"
             xmlns:conv="clr-namespace:UrbanChaosMapEditor.Converters"
             xmlns:m="clr-namespace:UrbanChaosMapEditor.Models"
             Foreground="White">

    <!-- Remove this if the parent sets DataContext -->
    <UserControl.DataContext>
        <vm:BuildingsTabViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <!-- Fluorescent overlay colours -->
        <SolidColorBrush x:Key="FacetWallBrush"   Color="#00FF00"/>
        <SolidColorBrush x:Key="FacetFenceBrush"  Color="#FFFF00"/>
        <SolidColorBrush x:Key="FacetCableBrush"  Color="#FF0000"/>
        <SolidColorBrush x:Key="FacetDoorBrush"   Color="#A020F0"/>
        <SolidColorBrush x:Key="FacetLadderBrush" Color="#FFA500"/>
        <SolidColorBrush x:Key="FacetOtherBrush"  Color="#7FD4FF"/>

        <!-- Global text colour for this tab -->
        <SolidColorBrush x:Key="TreeViewForegroundBrush" Color="White"/>
        <SolidColorBrush x:Key="LegendTextBrush" Color="#FF303030"/>

        <!-- Make ALL TextBlocks white by default -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TreeViewForegroundBrush}"/>
        </Style>

        <!-- Ensure TreeView items keep white text even when selected/disabled -->
        <Style TargetType="TreeViewItem">
            <Setter Property="Foreground" Value="{StaticResource TreeViewForegroundBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource TreeViewForegroundBrush}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="#88FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Pill-style ToggleButton -->
        <Style x:Key="LegendTogglePill" TargetType="ToggleButton">
            <Setter Property="Foreground" Value="{StaticResource LegendTextBrush}"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="MinWidth" Value="70"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#40FFFFFF"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="pill"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="2,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="pill" Property="BorderBrush" Value="White"/>
                                <Setter TargetName="pill" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LegendTogglePillCompact" TargetType="ToggleButton" BasedOn="{StaticResource LegendTogglePill}">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="MinHeight" Value="0"/>
            <Setter Property="MinWidth" Value="50"/>
            <Setter Property="Margin" Value="2,0,2,0"/>
        </Style>

        <Style x:Key="LegendPillTextStyleCompact" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource LegendTextBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <!-- Facet color converter -->
        <conv:FacetTypeToBrushConverter x:Key="FacetTypeToBrush"/>
    </UserControl.Resources>

    <DockPanel>
        <!-- Toolbar -->
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="8,6"
                    VerticalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <WrapPanel Margin="0,4,0,0"
                           VerticalAlignment="Center"
                           Orientation="Horizontal">

                    <ToggleButton Style="{StaticResource LegendTogglePillCompact}"
                                  Background="{StaticResource FacetWallBrush}"
                                  IsChecked="{Binding FilterWalls}">
                        <TextBlock Text="Walls" Style="{StaticResource LegendPillTextStyleCompact}"/>
                    </ToggleButton>

                    <ToggleButton Style="{StaticResource LegendTogglePillCompact}"
                                  Background="{StaticResource FacetFenceBrush}"
                                  IsChecked="{Binding FilterFences}">
                        <TextBlock Text="Fences" Style="{StaticResource LegendPillTextStyleCompact}"/>
                    </ToggleButton>

                    <ToggleButton Style="{StaticResource LegendTogglePillCompact}"
                                  Background="{StaticResource FacetDoorBrush}"
                                  IsChecked="{Binding FilterDoors}">
                        <TextBlock Text="Doors" Style="{StaticResource LegendPillTextStyleCompact}"/>
                    </ToggleButton>

                    <ToggleButton Style="{StaticResource LegendTogglePillCompact}"
                                  Background="{StaticResource FacetLadderBrush}"
                                  IsChecked="{Binding FilterLadders}">
                        <TextBlock Text="Ladders" Style="{StaticResource LegendPillTextStyleCompact}"/>
                    </ToggleButton>

                    <ToggleButton Style="{StaticResource LegendTogglePillCompact}"
                                  Background="{StaticResource FacetCableBrush}"
                                  IsChecked="{Binding ShowCablesList}">
                        <TextBlock Text="Cables" Style="{StaticResource LegendPillTextStyleCompact}"/>
                    </ToggleButton>
                </WrapPanel>
            </StackPanel>
        </StackPanel>

        <!-- Columnar stack: Top (buildings + facets/walkables) | Splitter | Details -->
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="6" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- TOP ROW -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Buildings list -->
                <TreeView Grid.Column="0"
                          Width="110"
                          Margin="0,0,8,0"
                          ItemsSource="{Binding Buildings}"
                          SelectedItemChanged="BuildingTree_OnSelectedItemChanged"
                          BorderThickness="0">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate DataType="{x:Type vm:BuildingVM}"
                                                  ItemsSource="{Binding VisibleStoreys}">
                            <TextBlock Text="{Binding DisplayName}"/>
                            <HierarchicalDataTemplate.ItemTemplate>
                                <DataTemplate DataType="{x:Type vm:StoreyVM}">
                                    <TextBlock Text="{Binding DisplayName}"/>
                                </DataTemplate>
                            </HierarchicalDataTemplate.ItemTemplate>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>

                <!-- Right side: split vertically into (Facets/Cables) and (Walkables/RoofFace4) -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- ===================== TOP: Facets / Cables ===================== -->
                    <Grid Grid.Row="0">
                        <!-- Facet tree -->
                        <TreeView ItemsSource="{Binding SelectedBuildingFacetGroups}"
                                  SelectedItemChanged="TreeView_OnSelectedItemChanged"
                                  MouseDoubleClick="TreeView_OnMouseDoubleClick"
                                  Foreground="{StaticResource TreeViewForegroundBrush}"
                                  TextElement.Foreground="{StaticResource TreeViewForegroundBrush}">
                            <TreeView.Style>
                                <Style TargetType="TreeView">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ShowCablesList}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TreeView.Style>

                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate DataType="{x:Type vm:FacetTypeGroupVM}"
                                                          ItemsSource="{Binding Facets}">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="9" Height="9" Margin="0,0,6,0">
                                            <Ellipse.Fill>
                                                <MultiBinding Converter="{StaticResource FacetTypeToBrush}">
                                                    <Binding Path="Type"/>
                                                    <Binding Source="{StaticResource FacetWallBrush}"/>
                                                    <Binding Source="{StaticResource FacetFenceBrush}"/>
                                                    <Binding Source="{StaticResource FacetCableBrush}"/>
                                                    <Binding Source="{StaticResource FacetDoorBrush}"/>
                                                    <Binding Source="{StaticResource FacetLadderBrush}"/>
                                                    <Binding Source="{StaticResource FacetOtherBrush}"/>
                                                </MultiBinding>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <TextBlock Text="{Binding TypeName}" FontWeight="SemiBold"/>
                                        <TextBlock Text="  ("/>
                                        <TextBlock Text="{Binding Count}"/>
                                        <TextBlock Text=" facets)"/>
                                    </StackPanel>

                                    <HierarchicalDataTemplate.ItemTemplate>
                                        <DataTemplate DataType="{x:Type vm:FacetVM}">
                                            <StackPanel Orientation="Horizontal">
                                                <!-- Facet number -->
                                                <TextBlock Text="#"/>
                                                <TextBlock Text="{Binding FacetId1}" FontWeight="Bold" Margin="2,0"/>

                                                <!-- Coords -->
                                                <TextBlock Text="  " />
                                                <TextBlock Text="{Binding Coords}"/>

                                                <!-- Starting floor -->
                                                <TextBlock Text="  Floor: " />
                                                <TextBlock Text="{Binding Y0}" />

                                                <!-- Painted marker (paintbrush) -->
                                                <TextBlock Text="  " />
                                                <TextBlock Text="🖌">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsPainted}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </DataTemplate>
                                    </HierarchicalDataTemplate.ItemTemplate>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>

                        <!-- Cables list -->
                        <ListView x:Name="CableList"
                                  Margin="0"
                                  ItemsSource="{Binding CableFacets}"
                                  SelectionChanged="CableList_OnSelectionChanged"
                                  MouseDoubleClick="CableList_OnMouseDoubleClick">
                            <ListView.Style>
                                <Style TargetType="ListView">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ShowCablesList}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ListView.Style>

                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Facet#" Width="60"
                                                    DisplayMemberBinding="{Binding FacetId1}"/>
                                    <GridViewColumn Header="Coords" Width="160"
                                                    DisplayMemberBinding="{Binding Coords}"/>
                                    <GridViewColumn Header="Height" Width="70"
                                                    DisplayMemberBinding="{Binding Height}"/>
                                    <GridViewColumn Header="Sag / Angles" Width="220"
                                                    DisplayMemberBinding="{Binding StyleDisplay}"/>
                                    <GridViewColumn Header="Flags" Width="90"
                                                    DisplayMemberBinding="{Binding Flags}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>

                    <!-- Splitter between facets and walkables -->
                    <GridSplitter Grid.Row="1"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Center"
                                  Height="6"
                                  Background="#22000000"
                                  ShowsPreview="True"/>

                    <!-- ===================== BOTTOM: Walkables + RoofFace4 ===================== -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Walkables -->
                        <Border Grid.Column="0" BorderBrush="#333" BorderThickness="1" CornerRadius="6" Padding="6">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Top"
                                           FontWeight="Bold"
                                           Margin="0,0,0,6"
                                           Text="Walkables (Selected Building)"/>
                                <ListView x:Name="WalkablesList"
          ItemsSource="{Binding SelectedBuildingWalkables}"
          SelectionChanged="WalkablesList_OnSelectionChanged"
          MouseDoubleClick="WalkablesList_OnMouseDoubleClick">

                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="#" Width="50" DisplayMemberBinding="{Binding WalkableId1}"/>
                                            <GridViewColumn Header="Rect" Width="200" DisplayMemberBinding="{Binding Rect}"/>
                                            <GridViewColumn Header="Y" Width="55" DisplayMemberBinding="{Binding Y}"/>
                                            <GridViewColumn Header="StoreyY" Width="70" DisplayMemberBinding="{Binding StoreyY}"/>
                                            <GridViewColumn Header="Face4" Width="120" DisplayMemberBinding="{Binding Face4Span}"/>
                                            <GridViewColumn Header="Next" Width="70" DisplayMemberBinding="{Binding Next}"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </DockPanel>
                        </Border>

                        <!-- small gap col=1 -->

                        <!-- RoofFace4 for selected walkable -->
                        <Border Grid.Column="2" BorderBrush="#333" BorderThickness="1" CornerRadius="6" Padding="6">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Top"
                                           FontWeight="Bold"
                                           Margin="0,0,0,6"
                                           Text="RoofFace4 (Selected Walkable)"/>
                                <ListView x:Name="RoofFaces4List"
          ItemsSource="{Binding SelectedWalkableRoofFaces4}"
          MouseDoubleClick="RoofFaces4List_OnMouseDoubleClick">

                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="#" Width="50" DisplayMemberBinding="{Binding FaceId}"/>
                                            <GridViewColumn Header="Y" Width="55" DisplayMemberBinding="{Binding Y}"/>
                                            <GridViewColumn Header="DY" Width="120" DisplayMemberBinding="{Binding DY}"/>
                                            <GridViewColumn Header="RX" Width="55" DisplayMemberBinding="{Binding RX}"/>
                                            <GridViewColumn Header="RZ" Width="55" DisplayMemberBinding="{Binding RZ}"/>
                                            <GridViewColumn Header="Flags" Width="70" DisplayMemberBinding="{Binding DrawFlags}"/>
                                            <GridViewColumn Header="Next" Width="70" DisplayMemberBinding="{Binding Next}"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </DockPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Splitter -->
            <GridSplitter Grid.Row="1"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Center"
                          Height="6"
                          Background="#22000000"
                          ShowsPreview="True"/>

            <!-- Details panel (unchanged) -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,6,0,0">
                    <Border Padding="10" BorderBrush="#333" BorderThickness="1" CornerRadius="6">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                                       Text="Selection"
                                       FontWeight="Bold"
                                       FontSize="13"/>

                            <TextBlock Grid.Row="2" Grid.ColumnSpan="2"
                                       Opacity="0.65"
                                       Text="No building selected.">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasSelectedBuildingRec, Mode=OneWay}" Value="False">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <Grid Grid.Row="2" Grid.ColumnSpan="2">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasSelectedBuildingRec, Mode=OneWay}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Opacity="0.75" Text="Building #:"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedBuildingId, Mode=OneWay}"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Opacity="0.75" Text="Selected Storey:"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedStoreyId, Mode=OneWay}"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Opacity="0.75" Text="Facet Range:"/>
                                <TextBlock Grid.Row="2" Grid.Column="1">
                                    <Run Text="Start="/>
                                    <Run Text="{Binding SelectedBuildingRec.StartFacet, Mode=OneWay}"/>
                                    <Run Text="   End="/>
                                    <Run Text="{Binding SelectedBuildingRec.EndFacet, Mode=OneWay}"/>
                                    <Run Text="   (Count="/>
                                    <Run Text="{Binding SelectedBuildingFacetRangeCount, Mode=OneWay}"/>
                                    <Run Text=")"/>
                                </TextBlock>

                                <TextBlock Grid.Row="3" Grid.Column="0" Opacity="0.75" Text="World Position:"/>
                                <TextBlock Grid.Row="3" Grid.Column="1">
                                    <Run Text="X="/>
                                    <Run Text="{Binding SelectedBuildingRec.WorldX, Mode=OneWay}"/>
                                    <Run Text="   Y="/>
                                    <Run Text="{Binding SelectedBuildingRec.WorldY, Mode=OneWay}"/>
                                    <Run Text="   Z="/>
                                    <Run Text="{Binding SelectedBuildingRec.WorldZ, Mode=OneWay}"/>
                                </TextBlock>

                                <TextBlock Grid.Row="4" Grid.Column="0" Opacity="0.75" Text="Walkable / Ware:"/>
                                <TextBlock Grid.Row="4" Grid.Column="1">
                                    <Run Text="Walkable="/>
                                    <Run Text="{Binding SelectedBuildingRec.Walkable, Mode=OneWay}"/>
                                    <Run Text="   Ware="/>
                                    <Run Text="{Binding SelectedBuildingRec.Ware, Mode=OneWay}"/>
                                </TextBlock>

                                <TextBlock Grid.Row="5" Grid.Column="0" Opacity="0.75" Text="Type / Counters:"/>
                                <TextBlock Grid.Row="5" Grid.Column="1">
                                    <Run Text="Type="/>
                                    <Run Text="{Binding SelectedBuildingRec.TypeDisplay, Mode=OneWay}"/>
                                    <Run Text="   Counter0="/>
                                    <Run Text="{Binding SelectedBuildingRec.Counter0, Mode=OneWay}"/>
                                    <Run Text="   Counter1="/>
                                    <Run Text="{Binding SelectedBuildingRec.Counter1, Mode=OneWay}"/>
                                </TextBlock>
                            </Grid>

                            <TextBlock Grid.Row="8" Grid.ColumnSpan="2"
                                       Opacity="0.6"
                                       Text="(Display-only preview. Editing to come.)"
                                       VerticalAlignment="Bottom"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</UserControl>
