<Window x:Class="UrbanChaosMapEditor.Views.GoToCellDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Go to Cell" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="{StaticResource Brush.Surface}" Foreground="{StaticResource Brush.TextPrimary}">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="120"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="X (0-127):" Margin="0,0,8,8" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtX" Grid.Column="1" Margin="0,0,0,8" HorizontalContentAlignment="Right"
                 PreviewTextInput="DigitsOnly" DataObject.Pasting="OnPaste"/>

        <TextBlock Grid.Row="1" Text="Y (0-127):" Margin="0,0,8,8" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtY" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8" HorizontalContentAlignment="Right"
                 PreviewTextInput="DigitsOnly" DataObject.Pasting="OnPaste"/>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancel" Width="80" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
