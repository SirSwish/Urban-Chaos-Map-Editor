<Window x:Class="UrbanChaosMapEditor.Views.PrimHeightDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Prim Height" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        Background="#2b2b2b" Foreground="White">

    <Window.Resources>
        <!-- Buttons -->
        <Style x:Key="DialogButton" TargetType="Button">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#DDDDDD"/>
            <Setter Property="BorderBrush" Value="#666666"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="MinWidth" Value="90"/>
        </Style>

        <!-- 64x64 tile, repeated -> fills a 64x256 canvas as 4 vertical copies -->
        <ImageBrush x:Key="WallBrush"
                    TileMode="Tile"
                    Viewport="0,0,64,64"
                    ViewportUnits="Absolute"
                    Stretch="None"/>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <!-- Clickable drag surface -->
            <RowDefinition Height="Auto"/>
            <!-- Readouts (moved BELOW so they don't get in the way) -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Wall: 64 x 256, background tiled with shared_386 (4x vertically) -->
        <Border Grid.Row="0" BorderBrush="#444" BorderThickness="1" Padding="6" HorizontalAlignment="Center">
            <Canvas x:Name="Wall"
                    Width="64" Height="256"
                    Background="{StaticResource WallBrush}"
                    MouseLeftButtonDown="Wall_MouseLeftButtonDown"
                    MouseMove="Wall_MouseMove"
                    MouseLeftButtonUp="Wall_MouseLeftButtonUp">
                <!-- Red dot (draggable) -->
                <Ellipse x:Name="Dot" Width="8" Height="8" Fill="Red" Stroke="Black" StrokeThickness="1"/>
            </Canvas>
        </Border>

        <!-- Readouts UNDER the wall so they never intercept dragging -->
        <StackPanel Grid.Row="1"
                    Orientation="Vertical"
                    Margin="0,8,0,0"
                    HorizontalAlignment="Center">
            <TextBlock Text="Storey (256 px each)" FontWeight="SemiBold" Opacity="0.9" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock><Run Text="Storey: "/><Run x:Name="LblStorey"/></TextBlock>
                <TextBlock Margin="12,0,0,0"><Run Text="Offset: "/><Run x:Name="LblOffset"/><Run Text=" px"/></TextBlock>
                <TextBlock Margin="12,0,0,0"><Run Text="Total: "/><Run x:Name="LblTotal"/><Run Text=" px"/></TextBlock>
            </StackPanel>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Style="{StaticResource DialogButton}" Content="OK" IsDefault="True" Click="Ok_Click"/>
            <Button Style="{StaticResource DialogButton}" Content="Cancel" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
