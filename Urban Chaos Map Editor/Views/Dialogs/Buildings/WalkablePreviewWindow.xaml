<Window x:Class="UrbanChaosMapEditor.Views.Dialogs.Buildings.WalkablePreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Walkable Preview"
        Height="520"
        Width="860"
        Background="#222222"
        Foreground="White"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock x:Name="HeaderTextBlock"
                   Grid.Row="0"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,4" />

        <!-- Details -->
        <TextBlock x:Name="DetailsTextBlock"
                   Grid.Row="1"
                   Margin="0,0,0,8"
                   TextWrapping="Wrap"
                   Opacity="0.8" />

        <!-- Body -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="340"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Properties card -->
            <Border Grid.Column="0"
                    BorderBrush="#444"
                    BorderThickness="1"
                    CornerRadius="4"
                    Background="#111111"
                    Padding="10">
                <StackPanel>
                    <TextBlock Text="Walkable Properties" FontWeight="Bold" Margin="0,0,0,8"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Opacity="0.7" Text="Building:"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtBuilding"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Opacity="0.7" Text="Rect (X/Z):"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtRect"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Opacity="0.7" Text="Y:"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TxtY"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Opacity="0.7" Text="StoreyY:"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="TxtStoreyY"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Opacity="0.7" Text="StartFace4:"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="TxtStartFace4"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Opacity="0.7" Text="EndFace4:"/>
                        <TextBlock Grid.Row="5" Grid.Column="1" x:Name="TxtEndFace4"/>

                        <TextBlock Grid.Row="6" Grid.Column="0" Opacity="0.7" Text="Face4 Count:"/>
                        <TextBlock Grid.Row="6" Grid.Column="1" x:Name="TxtFace4Count"/>

                        <TextBlock Grid.Row="7" Grid.Column="0" Opacity="0.7" Text="Next:"/>
                        <TextBlock Grid.Row="7" Grid.Column="1" x:Name="TxtNext"/>

                        <TextBlock Grid.Row="8" Grid.Column="0" Opacity="0.7" Text="(Old) Face3/Points:"/>
                        <TextBlock Grid.Row="8" Grid.Column="1" x:Name="TxtOldStuff"/>
                    </Grid>

                    <TextBlock Margin="0,10,0,0" Opacity="0.6"
                               Text="Double-click a RoofFace4 row to open its preview."/>
                </StackPanel>
            </Border>

            <!-- RoofFace4 list -->
            <Border Grid.Column="2"
                    BorderBrush="#444"
                    BorderThickness="1"
                    CornerRadius="4"
                    Background="#111111"
                    Padding="10">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top"
                               Text="RoofFace4 Span"
                               FontWeight="Bold"
                               Margin="0,0,0,8"/>

                    <ListView x:Name="RoofFacesList"
                              MouseDoubleClick="RoofFacesList_OnMouseDoubleClick">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="#" Width="50" DisplayMemberBinding="{Binding Index1}"/>
                                <GridViewColumn Header="Y" Width="60" DisplayMemberBinding="{Binding Y}"/>
                                <GridViewColumn Header="DY" Width="120" DisplayMemberBinding="{Binding DY}"/>
                                <GridViewColumn Header="Flags" Width="70" DisplayMemberBinding="{Binding FlagsHex}"/>
                                <GridViewColumn Header="RX" Width="50" DisplayMemberBinding="{Binding RX}"/>
                                <GridViewColumn Header="RZ" Width="60" DisplayMemberBinding="{Binding RZHex}"/>
                                <GridViewColumn Header="Next" Width="70" DisplayMemberBinding="{Binding Next}"/>
                                <GridViewColumn Header="Slope?" Width="70" DisplayMemberBinding="{Binding Sloped}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
