<Window x:Class="UrbanChaosMapEditor.Views.Dialogs.Buildings.StylePickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Style (TMA)" 
        Width="800" Height="600"
        MinWidth="600" MinHeight="400"
        Background="#202225"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Window.Resources>
        <SolidColorBrush x:Key="Fg" Color="White"/>
        <SolidColorBrush x:Key="Subtle" Color="#FFB0B0B0"/>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#3A3D42"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="80"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A4D52"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#2D5A27"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3D7A37"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for each item in the list -->
        <Style x:Key="StyleItemBorder" TargetType="Border">
            <Setter Property="Background" Value="#2A2D32"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A3D42"/>
                    <Setter Property="BorderBrush" Value="#666"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Select a Texture Style" 
                   FontWeight="Bold" 
                   FontSize="16" 
                   Foreground="White"
                   Margin="0,0,0,8"/>

        <!-- Search/Filter -->
        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="Filter:" 
                       Foreground="{StaticResource Subtle}" 
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"/>
            <TextBox x:Name="TxtFilter" 
                     Grid.Column="1"
                     Background="#2A2D32"
                     Foreground="White"
                     BorderBrush="#555"
                     Padding="6,4"
                     TextChanged="TxtFilter_TextChanged"/>

            <TextBlock x:Name="TxtStyleCount" 
                       Grid.Column="2"
                       Foreground="{StaticResource Subtle}"
                       VerticalAlignment="Center"
                       Margin="16,0,0,0"
                       Text="0 styles"/>
        </Grid>

        <!-- Styles List -->
        <Border Grid.Row="2" 
                BorderBrush="#333" 
                BorderThickness="1" 
                CornerRadius="4"
                Background="#1A1C1E">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="StylesList">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource StyleItemBorder}"
                                    Width="180"
                                    MouseLeftButtonDown="StyleItem_Click"
                                    Tag="{Binding}">
                                <StackPanel>
                                    <!-- Style ID and Name -->
                                    <TextBlock Text="{Binding DisplayLabel}" 
                                               Foreground="White" 
                                               FontWeight="SemiBold"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,0,0,6"/>

                                    <!-- Texture thumbnails (up to 5 entries) -->
                                    <StackPanel Orientation="Horizontal" Height="48">
                                        <Image Source="{Binding Thumb0}" Width="40" Height="40" 
                                               Margin="0,0,4,0" RenderOptions.BitmapScalingMode="NearestNeighbor"
                                               Stretch="Uniform"/>
                                        <Image Source="{Binding Thumb1}" Width="40" Height="40" 
                                               Margin="0,0,4,0" RenderOptions.BitmapScalingMode="NearestNeighbor"
                                               Stretch="Uniform"/>
                                        <Image Source="{Binding Thumb2}" Width="40" Height="40" 
                                               Margin="0,0,4,0" RenderOptions.BitmapScalingMode="NearestNeighbor"
                                               Stretch="Uniform"/>
                                        <Image Source="{Binding Thumb3}" Width="40" Height="40" 
                                               RenderOptions.BitmapScalingMode="NearestNeighbor"
                                               Stretch="Uniform"/>
                                    </StackPanel>

                                    <!-- Page info -->
                                    <TextBlock Text="{Binding PageInfo}" 
                                               Foreground="{StaticResource Subtle}" 
                                               FontSize="10"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Selected style preview -->
        <Border Grid.Row="3" 
                BorderBrush="#333" 
                BorderThickness="1" 
                CornerRadius="4"
                Background="#2A2D32"
                Padding="12"
                Margin="0,12,0,0">
            <Grid x:Name="SelectionPreview" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,16,0">
                    <Image x:Name="PreviewThumb0" Width="64" Height="64" Margin="0,0,4,0" 
                           RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                    <Image x:Name="PreviewThumb1" Width="64" Height="64" Margin="0,0,4,0" 
                           RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                    <Image x:Name="PreviewThumb2" Width="64" Height="64" Margin="0,0,4,0" 
                           RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                    <Image x:Name="PreviewThumb3" Width="64" Height="64" Margin="0,0,4,0" 
                           RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                    <Image x:Name="PreviewThumb4" Width="64" Height="64" 
                           RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="TxtSelectedName" 
                               Foreground="White" 
                               FontWeight="Bold" 
                               FontSize="14"/>
                    <TextBlock x:Name="TxtSelectedInfo" 
                               Foreground="{StaticResource Subtle}" 
                               FontSize="11"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Cancel" 
                    Style="{StaticResource ActionButton}"
                    Click="BtnCancel_Click"
                    Margin="0,0,8,0"/>
            <Button x:Name="BtnSelect"
                    Content="Select" 
                    Style="{StaticResource PrimaryButton}"
                    Click="BtnSelect_Click"
                    IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
