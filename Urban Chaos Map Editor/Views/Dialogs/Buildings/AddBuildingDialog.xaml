<Window x:Class="UrbanChaosMapEditor.Views.Dialogs.Buildings.AddBuildingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Building" 
        Width="320"
        SizeToContent="Height"
        Background="#202225"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <SolidColorBrush x:Key="Fg" Color="White"/>
        <SolidColorBrush x:Key="Subtle" Color="#FFB0B0B0"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <!-- optional: lighter so black is readable -->
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <!-- Make items in the drop-down list black as well -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#3A3D42"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="80"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A4D52"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#2D5A27"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3D7A37"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Add New Building" 
                   FontWeight="Bold" 
                   FontSize="16"/>

        <!-- Type selection -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="Building Type:" Margin="0,0,0,6"/>
            <ComboBox x:Name="CmbBuildingType" 
                      SelectedIndex="0">
                <ComboBoxItem Content="House" Tag="0"/>
                <ComboBoxItem Content="Warehouse" Tag="1"/>
                <ComboBoxItem Content="Office" Tag="2"/>
                <ComboBoxItem Content="Apartment" Tag="3"/>
                <ComboBoxItem Content="Crate (In)" Tag="4"/>
                <ComboBoxItem Content="Crate (Out)" Tag="5"/>
            </ComboBox>
            <TextBlock Text="The building will be created with no facets. Add facets after creation."
                       Foreground="{StaticResource Subtle}"
                       TextWrapping="Wrap"
                       FontSize="11"
                       Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Cancel" 
                    Style="{StaticResource ActionButton}"
                    Click="BtnCancel_Click"
                    Margin="0,0,8,0"/>
            <Button Content="Add Building" 
                    Style="{StaticResource PrimaryButton}"
                    Click="BtnAdd_Click"/>
        </StackPanel>
    </Grid>
</Window>
