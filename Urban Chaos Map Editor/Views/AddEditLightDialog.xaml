<Window x:Class="UrbanChaosMapEditor.Views.AddEditLightDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Light Properties" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        Background="#2b2b2b" Foreground="White">
    <Window.Resources>
        <!-- Tiled wall like PrimHeightDialog -->
        <ImageBrush x:Key="WallBrush"
                    TileMode="Tile"
                    Viewport="0,0,64,64"
                    ViewportUnits="Absolute"
                    Stretch="None"/>
        <Style x:Key="DialogButton" TargetType="Button">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#DDDDDD"/>
            <Setter Property="BorderBrush" Value="#666666"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="MinWidth" Value="90"/>
        </Style>
        <Style TargetType="Slider">
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="255"/>
            <Setter Property="IsSnapToTickEnabled" Value="True"/>
            <Setter Property="TickFrequency" Value="1"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="3"/>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <!-- Height (storey/offset) control -->
            <RowDefinition/>
            <!-- Appearance / sliders -->
            <RowDefinition/>
            <!-- Buttons -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#444" BorderThickness="1" Padding="6" HorizontalAlignment="Center">
            <Canvas x:Name="Wall"
                    Width="64" Height="256"
                    Background="{StaticResource WallBrush}"
                    MouseLeftButtonDown="Wall_MouseLeftButtonDown"
                    MouseMove="Wall_MouseMove"
                    MouseLeftButtonUp="Wall_MouseLeftButtonUp">
                <!-- Red dot (draggable) -->
                <Ellipse x:Name="Dot" Width="8" Height="8" Fill="Red" Stroke="Black" StrokeThickness="1"/>
            </Canvas>
        </Border>

        <!-- Appearance -->
        <Border Grid.Row="1" Margin="0,10,0,10" Padding="10" BorderBrush="#444" BorderThickness="1" Background="#2f2f2f">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Range -->
                <Label Grid.Row="0" Grid.Column="0" Content="Range"/>
                <Slider Grid.Row="0" Grid.Column="1"
                        Minimum="0" Maximum="255"
                        Value="{Binding Range, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Grid.Row="0" Grid.Column="2"
                           Text="{Binding Range}" HorizontalAlignment="Right"/>

                <!-- R -->
                <Label Grid.Row="1" Grid.Column="0" Content="R"/>
                <Slider Grid.Row="1" Grid.Column="1"
                        Minimum="-127" Maximum="127"
                        Value="{Binding Red, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Grid.Row="1" Grid.Column="2"
                           Text="{Binding Red}" HorizontalAlignment="Right"/>

                <!-- G -->
                <Label Grid.Row="2" Grid.Column="0" Content="G"/>
                <Slider Grid.Row="2" Grid.Column="1"
                        Minimum="-127" Maximum="127"
                        Value="{Binding Green, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Grid.Row="2" Grid.Column="2"
                           Text="{Binding Green}" HorizontalAlignment="Right"/>

                <!-- B -->
                <Label Grid.Row="3" Grid.Column="0" Content="B"/>
                <Slider Grid.Row="3" Grid.Column="1"
                        Minimum="-127" Maximum="127"
                        Value="{Binding Blue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Grid.Row="3" Grid.Column="2"
                           Text="{Binding Blue}" HorizontalAlignment="Right"/>

                <!-- Color preview swatch -->
                <StackPanel Grid.Row="0" Grid.Column="3" Grid.RowSpan="4" Orientation="Vertical" Margin="12,0,0,0">
                    <TextBlock Text="Preview" Margin="0,0,0,4" Opacity="0.8"/>
                    <Border Width="80" Height="50" BorderBrush="#666" BorderThickness="1"
                            Background="{Binding PreviewBrush}"/>
                    <TextBlock Text="{Binding PreviewInfo}" Margin="0,4,0,0" Opacity="0.8"/>
                </StackPanel>

                <!-- Height readouts under sliders -->
                <StackPanel Grid.Row="4" Grid.ColumnSpan="4" Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock><Run Text="Storey: "/><Run x:Name="LblStorey"/></TextBlock>
                    <TextBlock Margin="12,0,0,0"><Run Text="Offset: "/><Run x:Name="LblOffset"/><Run Text=" px"/></TextBlock>
                    <TextBlock Margin="12,0,0,0"><Run Text="Total: "/><Run x:Name="LblTotal"/><Run Text=" px"/></TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Style="{StaticResource DialogButton}" Content="OK" IsDefault="True" Click="Ok_Click"/>
            <Button Style="{StaticResource DialogButton}" Content="Cancel" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
