<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===== PALETTE ===== -->
    <SolidColorBrush x:Key="Brush.Background"  Color="#1E1E1E"/>
    <!-- window background -->
    <SolidColorBrush x:Key="Brush.Surface"     Color="#252526"/>
    <!-- menu / toolbar strip -->
    <SolidColorBrush x:Key="Brush.Border"      Color="#3C3C3C"/>
    <SolidColorBrush x:Key="Brush.TextPrimary" Color="#FFFFFF"/>
    <!-- main white text -->
    <SolidColorBrush x:Key="Brush.TextMuted"   Color="#C8C8C8"/>
    <!-- disabled / secondary -->
    <SolidColorBrush x:Key="Brush.Hover"       Color="#2D2D30"/>
    <!-- hover background -->
    <SolidColorBrush x:Key="Brush.Highlight"   Color="#094771"/>
    <!-- accent for selection -->
    <SolidColorBrush x:Key="Brush.Button"      Color="#333333"/>
    <SolidColorBrush x:Key="Brush.ButtonHover" Color="#3E3E3E"/>
    <SolidColorBrush x:Key="Brush.ButtonDown"  Color="#454545"/>

    <!-- ===== WINDOW / BASE ===== -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource Brush.Background}"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}"/>
    </Style>

    <Style TargetType="DockPanel">
        <Setter Property="Background" Value="{StaticResource Brush.Background}"/>
    </Style>

    <Style TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource Brush.Background}"/>
    </Style>

    <!-- ===== MENU STRIP ===== -->
    <Style TargetType="Menu">
        <Setter Property="Background" Value="{StaticResource Brush.Surface}"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <!-- Top-level MenuItems (File, Edit, etc.) -->
    <Style TargetType="MenuItem">
        <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="8,4"/>
        <Style.Triggers>
            <Trigger Property="IsHighlighted" Value="True">
                <Setter Property="Background" Value="{StaticResource Brush.Hover}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="{StaticResource Brush.TextMuted}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Drop-down menu popup styling -->
    <Style TargetType="{x:Type ContextMenu}">
        <Setter Property="Background" Value="{StaticResource Brush.Surface}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}"/>
    </Style>

    <Style TargetType="{x:Type Separator}">
        <Setter Property="Margin" Value="4,2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Separator">
                    <Border Height="1"
                            Background="{StaticResource Brush.Border}"
                            SnapsToDevicePixels="True"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===== BUTTONS (for future toolbar etc.) ===== -->
    <Style TargetType="Button">
        <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}"/>
        <Setter Property="Background" Value="{StaticResource Brush.Button}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource Brush.ButtonHover}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource Brush.ButtonDown}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.6"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
